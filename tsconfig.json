{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "skipLibCheck": true,
    "outDir": "build-tools",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    ".next/types/**/*.tsx",
    "app/**/*.tsx",
    "content/**/*.mdx",
    "lib/**/*.ts",
    "tools/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
